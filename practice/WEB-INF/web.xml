<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0" metadata-complete="true">
  
  <servlet>
    <servlet-name>ListDiaryServlet</servlet-name>
    <servlet-class>practice.servlet.ListDiaryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ListDiaryServlet</servlet-name>
    <url-pattern>/list-diary</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>NewDiaryServlet</servlet-name>
    <servlet-class>practice.servlet.NewDiaryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>NewDiaryServlet</servlet-name>
    <url-pattern>/new-diary</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>UpdateDiaryServlet</servlet-name>
    <servlet-class>practice.servlet.UpdateDiaryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UpdateDiaryServlet</servlet-name>
    <url-pattern>/update-diary</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DeleteDiaryServlet</servlet-name>
    <servlet-class>practice.servlet.DeleteDiaryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteDiaryServlet</servlet-name>
    <url-pattern>/delete-diary</url-pattern>
  </servlet-mapping>

  <init-param>
    <param-name>javaEncoding</param-name>
    <param-value>UTF-8</param-value>
  </init-param>

  <welcome-file-list>
    <welcome-file>/jsp/index.jsp</welcome-file>
  </welcome-file-list>

</web-app>
